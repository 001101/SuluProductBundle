<form class="form-horizontal" id="product-form">
    <input type="hidden" id="id" data-mapper-property="id"/>
    <input type="hidden" id="type" data-mapper-property="type" data-type="attributes"/>

    <div class="grid-row small">
        <div class="grid-col-12">
            <div class="form-group">
                <label for="name" class="required"><%= translate('product.name') %></label>
                <input class="form-element" type="text" id="name" data-validation-required="true"
                       data-validation-max-length="255" data-mapper-property="name"/>
            </div>
        </div>
    </div>
    <div class="grid-row small">
        <div class="grid-col-6">
            <div class="form-group">
                <label for="number" class="required"><%= translate('product.number') %></label>
                <input class="form-element" type="text" id="number" data-validation-required="true"
                       data-validation-max-length="255" data-mapper-property="number"/>
            </div>
        </div>
        <div class="grid-col-6">
            <div class="form-group">
                <label for="status" class="required"><%=translate('product.status')%></label>

                <div id="status"
                     data-aura-component="select@husky"
                     data-aura-data="{{ status|json_encode() }}"
                     data-aura-default-label="<%=translate('public.please-choose')%>"
                     data-aura-multiple-select="false"
                     data-aura-instance-name="status"
                     data-type-label="status"
                     data-type-required="status"
                     data-mapper-property="status"
                     data-type="husky-select"
                     data-validation-required="true"
                     data-aura-pre-selected-elements="[]"
                     data-form="true">
                </div>
            </div>
        </div>
    </div>

    <h2 class="divider"><%= translate('product.description') %></h2>

    <div class="grid-row small">
        <div class="grid-col-12">
            <div class="form-group">
                <label for="long-description"><%= translate('product.long-description') %></label>
                <textarea id="long-description"
                          class="form-element"
                          data-type="textEditor"
                          data-type-instance-name="long-description"
                          data-aura-component="ckeditor@husky"
                          data-aura-height="300"
                          data-mapper-property="longDescription"
                          data-aura-instance-name="long-description"></textarea>
            </div>
        </div>
    </div>

    <div class="grid-row small">
        <div class="grid-col-12">
            <div class="form-group">
                <label for="short-description"><%= translate('product.short-description') %></label>
                <textarea id="short-description"
                          class="form-element trigger-save-button"
                          data-mapper-property="shortDescription"></textarea>
            </div>
        </div>
    </div>

    <h2 class="divider"><%= translate('tag.tags.title') %></h2>

    <div class="grid-row small">
        <div class="grid-col-12">
            <div class="form-group">
                <label for="tags"><%= translate('tag.tags.title') %></label>

                <div id="tags"
                     data-mapper-property="tags"
                     data-type="tagList"
                     data-type-instance-name="tags"
                     data-form="true"
                     data-aura-component="auto-complete-list@husky"
                     data-aura-instance-name="tags"
                     data-aura-remote-url="/admin/api/tags?flat=true&sortBy=name"
                     data-aura-get-parameter="search"
                     data-aura-auto-complete-icon="tag">
                </div>
            </div>
        </div>
    </div>

    <div class="grid-row small">
        <div class="grid-col-12">
            <div class="form-group">
                <label class="top p-top-10"><%= translate('product.products.categories') %></label>

                <div id="categories">
                    <div data-aura-component="datagrid@husky"
                         data-aura-url="/admin/api/categories?flat=true&sortBy=depth&sortOrder=asc"
                         data-aura-result-key="categories"
                         data-aura-pagination="false"
                         data-aura-instance-name="categories"
                         data-aura-children-property-name="children"
                         data-aura-resize-listeners="false"
                         data-aura-view-options='{"table":{"noItemsText":"sulu.category.no-categories-available","showHead":false,"cssClass":"white-box","selectItem":{"type":"checkbox","inFirstCell":true}}}'
                         data-aura-matchings='[{"name":"name","content":"Name"},{"name":"id","disabled":true},{"name":"children","disabled":true},{"name":"parent","disabled":true}]'
                         data-form="true"
                         data-type="categoryList"
                         data-mapper-property="categories"
                         id="categoriesList">
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
