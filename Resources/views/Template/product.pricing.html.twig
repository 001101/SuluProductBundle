<form class="form-horizontal" id="product-pricing-form">
    <input type="hidden" id="id" data-mapper-property="id"/>
    <input type="hidden" id="type" data-mapper-property="type" data-type="attributes"/>

    <div class="grid-row">
        <div class="grid-col-6">
            <div class="form-group">
                <label for="price-info"><%= translate('product.price-info') %></label>
                <input class="form-element" type="text" id="price-info"
                       data-validation-max-length="255" data-mapper-property="priceInfo"/>
            </div>
        </div>
        <div class="grid-col-6">
            <div class="form-group">
                <label for="status" class="required"><%=translate('product.tax-class')%></label>

                <div id="tax-class"
                     data-aura-component="select@husky"
                     data-aura-data="{{ taxClasses|json_encode() }}"
                     data-aura-default-label="<%=translate('public.please-choose')%>"
                     data-aura-multiple-select="false"
                     data-aura-instance-name="tax-class"
                     data-type-label="tax-class"
                     data-type-required="tax-class"
                     data-mapper-property="taxClass"
                     data-type="husky-select"
                     data-validation-required="true"
                     data-aura-pre-selected-elements="[]"
                     data-form="true">
                </div>
            </div>
        </div>
    </div>

    <div class="grid-row">
        <table class="table">
            <thead>
            <tr class="row">
                <th class="header-cell">
                    <span class="cell-content"><%=translate('product.currency')%></span>
                </th>
                <th class="header-cell">
                    <span class="cell-content"><%=translate('product.price')%></span>
                </th>
            </tr>
            </thead>
            <tbody data-mapper-property='[{"data":"prices", "tpl":"price-tpl"}]'
                   data-type="collection">
            <script type="text/template" id="price-tpl">
                <~ var price = price ? price : '', id = id ? id : null; ~>
                <tr class="row">
                    <td>
                        <input type="hidden" data-mapper-property="id" data-type="decimal" value="<~=id~>"/>
                        <span class="cell-content" data-type="label" data-type-label="name"
                              data-mapper-property="currency">
                        </span>
                    </td>
                    <td>
                        <div class="input-wrapper" style="display: block">
                            <input type="text" data-type="decimal" value="<~=price~>"
                                   class="form-element husky-validate editable-input"
                                   data-mapper-property="price"/>
                        </div>
                    </td>
                </tr>
            </script>
            </tbody>
        </table>
    </div>
</form>
