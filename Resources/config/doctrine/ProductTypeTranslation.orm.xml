<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sulu\Bundle\Product\BaseBundle\Entity\ProductTypeTranslation" table="pr_product_type_translations">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="name" type="string" column="name" length="255"/>
        <field name="languageCode" type="string" column="languageCode" length="10"/>
        <many-to-one field="productType" target-entity="Sulu\Bundle\Product\BaseBundle\Entity\ProductType" inversed-by="productTypeTranslations">
            <join-columns>
                <join-column name="idProductType" referenced-column-name="id" nullable="false"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
